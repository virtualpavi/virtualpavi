---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { Icon } from 'astro-icon/components';
---

<BaseLayout 
  title="Page Not Found"
  description="The page you're looking for doesn't exist or has been moved."
>
  <section class="py-24 sm:py-32">
    <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <!-- Error Code -->
      <div class="mb-8">
        <p class="text-8xl sm:text-9xl font-bold gradient-text">404</p>
      </div>

      <!-- Terminal Style Message -->
      <div class="bg-cyber-navy/50 border border-cyber-slate rounded-2xl p-6 mb-8 text-left">
        <div class="flex items-center gap-2 mb-4 pb-4 border-b border-cyber-slate">
          <span class="w-3 h-3 rounded-full bg-red-500"></span>
          <span class="w-3 h-3 rounded-full bg-yellow-500"></span>
          <span class="w-3 h-3 rounded-full bg-green-500"></span>
          <span class="ml-4 text-cyber-slate font-mono text-sm">bash</span>
        </div>
        <div class="font-mono text-sm space-y-2">
          <p class="text-cyber-steel">
            <span class="text-neon-cyan">$</span> curl -I {Astro.url.pathname}
          </p>
          <p class="text-red-400">
            HTTP/1.1 404 Not Found
          </p>
          <p class="text-cyber-slate">
            Error: Resource not found in current directory
          </p>
        </div>
      </div>

      <!-- Message -->
      <h1 class="text-2xl sm:text-3xl font-bold text-cyber-light mb-4">
        Page Not Found
      </h1>
      <p class="text-cyber-steel mb-8">
        The page you're looking for doesn't exist or has been moved to a new location.
      </p>

      <!-- Actions -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="/"
          class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-neon-cyan text-cyber-dark font-semibold rounded-lg hover:bg-neon-blue transition-colors"
        >
          <Icon name="lucide:home" class="w-4 h-4" />
          Go Home
        </a>
        <a 
          href="/blog"
          class="inline-flex items-center justify-center gap-2 px-6 py-3 border border-cyber-slate text-cyber-light font-semibold rounded-lg hover:border-neon-cyan hover:text-neon-cyan transition-colors"
        >
          <Icon name="lucide:book-open" class="w-4 h-4" />
          Read Blog
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
