---
import BaseLayout from '@/layouts/BaseLayout.astro';
import BlogCard from '@/components/BlogCard.astro';
import { Icon } from 'astro-icon/components';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Calculate reading time (rough estimate: 200 words per minute)
const getReadingTime = (content: string) => {
  const words = content.split(/\s+/).length;
  const minutes = Math.ceil(words / 200);
  return `${minutes} min read`;
};
---

<BaseLayout 
  title="Blog"
  description="Security insights, threat analysis, and technical deep-dives from the frontlines of cybersecurity."
>
  <section class="py-16 sm:py-24">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="mb-12">
        <div class="flex items-center gap-4 mb-4">
          <Icon name="lucide:rss" class="w-6 h-6 text-neon-cyan" />
          <h1 class="text-3xl sm:text-4xl font-bold text-cyber-light">Blog</h1>
        </div>
        <p class="text-cyber-steel max-w-2xl">
          Security insights, automation strategies, and technical deep-dives from 7+ years defending digital infrastructure.
        </p>
        <a 
          href="/rss.xml"
          class="inline-flex items-center gap-2 mt-4 text-sm text-neon-cyan hover:underline"
        >
          <Icon name="lucide:rss" class="w-4 h-4" />
          Subscribe via RSS
        </a>
      </div>

      <!-- Posts Grid -->
      {posts.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {posts.map((post) => (
            <BlogCard
              title={post.data.title}
              description={post.data.description}
              pubDate={post.data.pubDate}
              slug={post.slug}
              tags={post.data.tags}
              readingTime={post.data.readingTime || getReadingTime(post.body || '')}
            />
          ))}
        </div>
      ) : (
        <div class="text-center py-16">
          <Icon name="lucide:file-text" class="w-12 h-12 text-cyber-slate mx-auto mb-4" />
          <p class="text-cyber-steel">No posts yet. Check back soon!</p>
        </div>
      )}
    </div>
  </section>
</BaseLayout>
