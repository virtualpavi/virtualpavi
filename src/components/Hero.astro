---
import { Icon } from 'astro-icon/components';
import profile from '@/data/profile.json';

const { name, headline, currentRole, currentFocus, about } = profile;
---

<section class="py-16 sm:py-24">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Hero Text -->
      <div class="space-y-6">
        <div class="space-y-2">
          <p class="text-neon-cyan font-mono text-sm">$ whoami</p>
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold">
            <span class="gradient-text">{name}</span>
          </h1>
        </div>
        
        <p class="text-xl sm:text-2xl text-cyber-steel typing-effect max-w-lg">
          {headline}
        </p>
        
        <div class="flex flex-wrap gap-4 text-sm text-cyber-steel">
          <span class="flex items-center gap-2">
            <Icon name="lucide:briefcase" class="w-4 h-4 text-neon-cyan" />
            {currentRole.title}
          </span>
          <span class="flex items-center gap-2">
            <Icon name="lucide:building-2" class="w-4 h-4 text-neon-cyan" />
            {currentRole.company}
          </span>
          <span class="flex items-center gap-2">
            <Icon name="lucide:map-pin" class="w-4 h-4 text-neon-cyan" />
            {currentRole.location}
          </span>
        </div>

        <div class="flex flex-wrap gap-4 pt-4">
          <a 
            href="/contact" 
            class="inline-flex items-center gap-2 px-6 py-3 bg-neon-cyan text-cyber-dark font-semibold rounded-lg hover:bg-neon-blue transition-colors"
          >
            <Icon name="lucide:send" class="w-4 h-4" />
            Get in Touch
          </a>
          <a 
            href="/blog" 
            class="inline-flex items-center gap-2 px-6 py-3 border border-cyber-slate text-cyber-light font-semibold rounded-lg hover:border-neon-cyan hover:text-neon-cyan transition-colors"
          >
            <Icon name="lucide:book-open" class="w-4 h-4" />
            Read Blog
          </a>
        </div>
      </div>

      <!-- Hero Visual / Stats -->
      <div class="relative">
        <div class="bg-cyber-navy/50 border border-cyber-slate rounded-2xl p-8 backdrop-blur-sm">
          <!-- Terminal-like header -->
          <div class="flex items-center gap-2 mb-6 pb-4 border-b border-cyber-slate">
            <span class="w-3 h-3 rounded-full bg-red-500"></span>
            <span class="w-3 h-3 rounded-full bg-yellow-500"></span>
            <span class="w-3 h-3 rounded-full bg-green-500"></span>
            <span class="ml-4 text-cyber-slate font-mono text-sm">security_profile.sh</span>
          </div>

          <!-- Stats Grid -->
          <div class="grid grid-cols-2 gap-6">
            <div class="text-center p-4 bg-cyber-dark/50 rounded-xl">
              <p class="text-3xl font-bold text-neon-cyan">{profile.stats.yearsExperience}+</p>
              <p class="text-sm text-cyber-steel mt-1">Years Experience</p>
            </div>
            <div class="text-center p-4 bg-cyber-dark/50 rounded-xl">
              <p class="text-3xl font-bold text-neon-blue">{profile.stats.certificationsCount}</p>
              <p class="text-sm text-cyber-steel mt-1">Certifications</p>
            </div>
            <div class="text-center p-4 bg-cyber-dark/50 rounded-xl">
              <p class="text-3xl font-bold text-neon-purple">{profile.stats.projectsCount}+</p>
              <p class="text-sm text-cyber-steel mt-1">Projects</p>
            </div>
            <div class="text-center p-4 bg-cyber-dark/50 rounded-xl">
              <p class="text-3xl font-bold text-neon-green">24/7</p>
              <p class="text-sm text-cyber-steel mt-1">Threat Monitoring</p>
            </div>
          </div>

          <!-- Current Focus Tag -->
          <div class="mt-6 pt-4 border-t border-cyber-slate">
            <div class="flex items-center gap-2 text-sm">
              <span class="w-2 h-2 rounded-full bg-neon-green animate-pulse"></span>
              <span class="text-cyber-steel">Current Focus:</span>
              <span class="text-neon-cyan font-medium">{currentFocus}</span>
            </div>
          </div>
        </div>

        <!-- Decorative glow -->
        <div class="absolute -inset-4 bg-gradient-to-r from-neon-cyan/10 via-neon-blue/10 to-neon-purple/10 rounded-3xl blur-3xl -z-10"></div>
      </div>
    </div>
  </div>
</section>
